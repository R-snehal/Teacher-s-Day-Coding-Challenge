#include <iostream>

int main() {
    std::ios_base::sync_with_stdio(false);
    std::cin.tie(NULL);

    int n;
    std::cin >> n;

    int count = 0;
    for (int i = 0; i < n; ++i) {
        int p, q;
        std::cin >> p >> q;
        if (q - p >= 2) {
            count++;
        }
    }

    std::cout << count << std::endl;

    return 0;
}
