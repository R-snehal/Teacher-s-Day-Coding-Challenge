#include <bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    vector<int> heights(n);
    for(int i =0; i<n; i++){
        cin >> heights[i];
    }
    int max_height = 0;
    int index = -1;
    for(int i = 0; i<n; i++){
        if(heights[i]>max_height){
            max_height = heights[i];
            index = i;
        }
    }
    int min = 101;
    int min_idx = -1;
    for(int i = n-1; i>=0; i--){
        if(heights[i] < min){
            min = heights[i];
            min_idx = i;
        }
    }
    int swaps = index;
    swaps += (n-1) - min_idx;
    if(index > min_idx){
        swaps--;
    }
    cout<<swaps<<endl;
    return 0;
}
