#include <bits/stdc++.h>
using namespace std;
int main() {
    string s;
    cin >> s;
 
    int total_rotations = 0;
    char current_char = 'a';
    for (char target_char : s) {
        int current_pos = current_char - 'a';
        int target_pos = target_char - 'a';
        int diff = std::abs(current_pos - target_pos);
        int rotations = std::min(diff, 26 - diff);
        total_rotations += rotations;
        current_char = target_char;
    }
    cout << total_rotations << endl;
 
    return 0;
}
