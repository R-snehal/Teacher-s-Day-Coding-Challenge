#include <iostream>
using namespace std;
int main() {
    long long n, k;
    cin >> n >> k;
    long long odd_count;
    if (n % 2 == 0) {
        odd_count = n / 2;
    } else {
        odd_count = (n / 2) + 1;
    }
    if (k <= odd_count) {
        cout << 2 * k - 1 << endl;
    } else {
        long long even_k = k - odd_count;
        cout << 2 * even_k << endl;
    }
    return 0;
}
