#include <bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    if(n == 0){
        cout<<0<<endl;
        return 0;
    }
    vector<long long> a(n);
    for(int i = 0; i<n;i++){
        cin>>a[i];
    }
    if(n==1){
        cout<<1<<endl;
        return 0;
    }
    int maxi = 1;
    int current = 1;
    for(int i =1; i<n;i++){
        if(a[i]>=a[i-1]){
            current++;
        }
        else{
            current = 1;
        }
        maxi = max(maxi, current);
    }
    cout<<maxi<<endl;
    return 0;
}
