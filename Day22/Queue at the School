#include <bits/stdc++.h>
using namespace std;
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
 
    int n, t;
    cin >> n >> t;
    string s;
    cin >> s;
    for (int j = 0; j < t; ++j) {
        string new_s = s;
        for (int i = 0; i < n - 1; ++i) {
            if (s[i] == 'B' && s[i+1] == 'G') {
                new_s[i] = 'G';
                new_s[i+1] = 'B';
            }
        }
        s = new_s;
    }
    cout << s << endl;
 
    return 0;
}
