#include <bits/stdc++.h>
using namespace std;
int main() {
    int n;
    cin >> n;
    map<int, int> counts;
    for (int i = 0; i < n; ++i) {
        int x;
        cin >> x;
        counts[x]++;
    }
    if (counts[5] > 0 || counts[7] > 0) {
        cout << -1 << endl;
        return 0;
    }
    if (counts[1] + counts[2] + counts[3] + counts[4] + counts[6] != n ||
        counts[1] != n / 3 ||
        counts[2] + counts[3] != n / 3 ||
        counts[4] + counts[6] != n / 3 ||
        counts[2] < counts[4] ||
        counts[3] != counts[6] - (counts[2] - counts[4]) 
        ) {
        if (counts[1] != counts[2] + counts[3] || counts[2] < counts[4] || counts[3] != counts[6]) {
            cout << -1 << endl;
            return 0;
        }
    }
    for (int i = 0; i < counts[4]; ++i) {
        cout << "1 2 4" << endl;
    }
    for (int i = 0; i < counts[3]; ++i) {
        cout << "1 3 6" << endl;
    }
    for (int i = 0; i < counts[2] - counts[4]; ++i) {
        cout << "1 2 6" << endl;
    }
 
    return 0;
}
