#include <bits/stdc++.h>
using namespace std;
int main() {
    int n;
    cin >> n;
    for (int num_of_sevens = n / 7; num_of_sevens >= 0; --num_of_sevens) {
        int remaining_sum = n - (num_of_sevens * 7);
        if (remaining_sum >= 0 && remaining_sum % 4 == 0) {
            int num_of_fours = remaining_sum / 4;
            for (int i = 0; i < num_of_fours; ++i) {
                cout << 4;
            }
            for (int i = 0; i < num_of_sevens; ++i) {
                cout << 7;
            }
            cout << endl;
            return 0;
        }
    }
    cout << -1 << endl;
 
    return 0;
}
