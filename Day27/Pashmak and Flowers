#include <bits/stdc++.h>
using namespace std;
int main() {
    int n;
    cin >> n;
    vector<int> b(n);
    for (int i = 0; i < n; ++i) {
        cin >> b[i];
    }
    sort(b.begin(), b.end());
    long long min_beauty = b[0];
    long long max_beauty = b[n - 1];
    long long max_diff = max_beauty - min_beauty;
    long long ways;
    if (min_beauty == max_beauty) {
        ways = (long long)n * (n - 1) / 2;
    } else {
        long long count_min = 0;
        long long count_max = 0;
        int i = 0;
        while (i < n && b[i] == min_beauty) {
            count_min++;
            i++;
        }
        int j = n - 1;
        while (j >= 0 && b[j] == max_beauty) {
            count_max++;
            j--;
        }
        ways = count_min * count_max;
    }
    cout << max_diff << " " << ways << endl;
 
    return 0;
}
