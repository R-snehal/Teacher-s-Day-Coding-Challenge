#include <bits/stdc++.h>
using namespace std;
int main() {
    int n;
    cin >> n;
    
    long long sum_up = 0;
    long long sum_low = 0;
    int odd_even_dominoes = 0;
 
    for (int i = 0; i < n; ++i) {
        int x, y;
        cin >> x >> y;
        sum_up += x;
        sum_low += y;
        if ((x % 2 != 0 && y % 2 == 0) || (x % 2 == 0 && y % 2 != 0)) {
            odd_even_dominoes++;
        }
    }
 
    if (sum_up % 2 == 0 && sum_low % 2 == 0) {
        cout << 0 << endl;
    } else if (sum_up % 2 != 0 && sum_low % 2 != 0) {
        if (odd_even_dominoes > 0) {
            cout << 1 << endl;
        } else {
            cout << -1 <<endl;
        }
    } else {
        cout << -1 << endl;
    }
 
    return 0;
}
