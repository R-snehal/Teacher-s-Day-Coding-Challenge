class Solution {
public:
    bool isPalindrome(string s) {
        string filtered_s = "";
        for (char c : s) {
            if (isalnum(c)) {
                filtered_s += tolower(c);
            }
        }

        string reversed_s = filtered_s;
        reverse(reversed_s.begin(), reversed_s.end());

        return filtered_s == reversed_s;
    }
};
