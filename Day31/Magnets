#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int n;
    cin >> n;
 
    string prev, cur;
    int groups = 1; // at least one group exists
 
    cin >> prev; // read first magnet
 
    for (int i = 1; i < n; i++) {
        cin >> cur;
        if (cur != prev) {
            groups++; // new group formed
        }
        prev = cur;
    }
 
    cout << groups << "\n";
    return 0;
}
