#include <iostream> 
#include <string>   
using namespace std; 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int n;
    cin >> n;
    for (int i = 0; i < n; ++i) {
        string s;
        cin >> s; 
        int len = s.length();
        if (len > 10) {
            cout << s[0];
            cout << len - 2;
            cout << s[len - 1];
            cout << "\n"; 
        } else {
            cout << s << "\n";
        }
    }
    return 0;
}
