#include <iostream> 
#include <cmath>    
using namespace std; 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int value;
    int row_one = -1; 
    int col_one = -1; 
    for (int i = 1; i <= 5; ++i) { 
        for (int j = 1; j <= 5; ++j) { 
            cin >> value; 
            if (value == 1) {
                row_one = i;
                col_one = j;
            }
        }
    }
    int moves = abs(row_one - 3) + abs(col_one - 3);
    cout << moves << endl; 
    return 0;
}
