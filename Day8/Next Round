#include <iostream>
#include <vector>
using namespace std; 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int n, k;
    cin >> n >> k;
    vector<int> scores(n);
    for (int i = 0; i < n; ++i) {
        cin >> scores[i]; 
    }
    int kth_score = scores[k - 1]; 
    int advancers = 0;
    for (int i = 0; i < n; ++i) {
        if (scores[i] >= kth_score && scores[i] > 0) {
            advancers++;
        } else {
            break;
        }
    }

    cout << advancers << endl;

    return 0;
}
