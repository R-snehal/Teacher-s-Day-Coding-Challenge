#include <iostream>
#include <vector>
using namespace std; 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int n;
    cin >> n;
    int solved_problems_count = 0; 
    for (int i = 0; i < n; ++i) {
        int petya_sure, vasya_sure, tonya_sure;
        cin >> petya_sure >> vasya_sure >> tonya_sure;
        int sure_count = petya_sure + vasya_sure + tonya_sure;
        if (sure_count >= 2) {
            solved_problems_count++; 
        }
    }
    cout << solved_problems_count << endl;
    return 0;
}
